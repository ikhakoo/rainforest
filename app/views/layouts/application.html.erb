<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
      <div class="navbar navbar-inverse navbar-fixed-top">
          <div class="container">
              <div class="navbar-header">
                  <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand">RainForest</a>
              </div>
              <center>
                  <div class="navbar-collapse collapse" id="navbar-main">
                      <ul class="nav navbar-nav">
                          <li><%= link_to_unless_current('Home', root_path) {  link_to('Home', root_path, class: 'active') } %></li>
                         <li><%= link_to_unless_current('Products', products_path) {  link_to('Products', products_path, class: 'active') } %></li>
                      </ul>
                      <% if current_user %>
                        <p class="navbar-text navbar-right">Signed in as <%= current_user.name %> <%= link_to "Log out", session_path("current"), :method => :delete %></p>
                      <% else %>
                      <form class="navbar-form navbar-right" role="search" action="/sessions/create" method="POST">
                          <div class="form-group">
                              <input type="text" class="form-control" for="user[email]" placeholder="Email">
                          </div>
                          <div class="form-group">
                              <input type="text" class="form-control" for="user[password]" placeholder="Password">
                          </div>
                          <button type="submit" class="btn btn-default">Sign In</button>
                          <a href="/users/new">Sign Up</a>
                      <% end %>
                      </form>
                  </div>
              </center>
          </div>
      </div>

    <% if flash[:notice] %>
      <p id="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p id="alert"><%= flash[:alert] %></p>
    <% end %>
    <br>
    <br>
    <br>
    <%= yield %>

    
  </body>
</html>

