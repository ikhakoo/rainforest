<% @products.each do |product| %>
<div class="well">
  <p>Name: <%= link_to product.name, "/products/#{product.id}" %><br>
		 Description: <%= product.description %> <br>
		 Price($): <%= product.formatted_price %></p>
	</p>
	
	<p class="btn btn-default">
		<%= link_to 'Delete', "/products/#{product.id}", method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %>
	</p>
	<p class="btn btn-default">
		<%= link_to 'Edit', "/products/#{product.id}/edit" %>
	</p>
	<div class="btn btn-default">
		<%= link_to 'New Review', "/products/#{product.id}" %>
	</div>
	<div class="btn btn-default">
		<%= link_to 'Reviews', "/products/#{product.id}/reviews/#{product.id}" %>
	</div>
	<br>
	<br>
</div>
<p><% truncate(products.description, length 100) %></p>
<% end %>
</div>