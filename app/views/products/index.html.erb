<% if current_user %>
<h1>Products </h1>

<%= form_tag products_path, method: :get, id: 'search_form' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search" %>
<% end %>
<%= link_to "Add New Product", "/products/new" %>
<br>
<br>
<% @products.each do |product| %>
<div class="well">
  <p>Name: <%= link_to product.name, "/products/#{product.id}" %><br>
		 Description: <%= product.description %> <br>
		 Price($): <%= product.formatted_price %></p>
	</p>
	
	<p class="btn btn-default">
		<%= link_to 'Delete', "/products/#{product.id}", method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %>
	</p>
	<p class="btn btn-default">
		<%= link_to 'Edit', "/products/#{product.id}/edit" %>
	</p>
	<div class="btn btn-default">
		<%= link_to 'New Review', "/products/#{product.id}" %>
	</div>
	<div class="btn btn-default">
		<%= link_to 'Reviews', "/products/#{product.id}/reviews/#{product.id}" %>
	</div>
	<br>
	<br>
</div>
<% end %>
<% else %>
	<script type="text/javascript">
		window.location.href="/users/new"
	</script>
<% end %>
</div>
