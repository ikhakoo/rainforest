<% if current_user %>
<h1>Products <small><%= page_entries_info @products %></small></h1>

<%= form_tag products_path, method: :get, id: 'search_form' do %>
<%= text_field_tag :search, params[:search], placeholder: "Enter search item" %>
<%= submit_tag("Search") %>
<% end %>
<%= link_to "Add New Product", "/products/new" %>
<br>
<br>
<%= render @products %>
<%= paginate @products %>
<% else %>
	<script type="text/javascript">
		window.location.href="/users/new"
	</script>
<% end %>
